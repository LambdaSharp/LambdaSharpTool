{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "LambdaSharp CloudFormation Test (v1.0)",
  "Parameters": {
    "ModuleName": {
      "Type": "String",
      "Description": "LambdaSharp Module Name",
      "Default": "TestModule"
    },
    "Tier": {
      "Type": "String",
      "Description": "LambdaSharp Deployment Tier"
    },
    "TierLowercase": {
      "Type": "String",
      "Description": "LambdaSharp Deployment Tier (lowercase)"
    },
    "DeploymentBucketName": {
      "Type": "String",
      "Description": "LambdaSharp Deployment S3 Bucket Name"
    },
    "DeploymentKeyPrefix": {
      "Type": "String",
      "Description": "LambdaSharp Deployment S3 Bucket Key Prefix"
    }
  },
  "Resources": {
    "SampleParameterCollectionFourthNestedParameter": {
      "Type": "AWS::SNS::Topic",
      "Properties": {}
    },
    "SourceResourceParameter": {
      "Type": "AWS::SNS::Topic",
      "Properties": {}
    },
    "SourceParameterCollectionSecondSourceResourceParameter": {
      "Type": "AWS::SNS::Topic",
      "Properties": {}
    },
    "VersionSsmParameter": {
      "Type": "AWS::SSM::Parameter",
      "Properties": {
        "Type": "String",
        "Description": "LambdaSharp module version",
        "Value": "1.0",
        "Name": {
          "Fn::Sub": "/${Tier}/TestModule/Version"
        }
      }
    },
    "CloudWatchLogsRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Sid": "CloudWatchLogsKinesisInvocation",
              "Effect": "Allow",
              "Principal": {
                "Service": {
                  "Fn::Sub": "logs.${AWS::Region}.amazonaws.com"
                }
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Sid": "CloudWatchLogsKinesisPermissions",
                  "Effect": "Allow",
                  "Action": "kinesis:PutRecord",
                  "Resource": {
                    "Fn::ImportValue": {
                      "Fn::Sub": "${Tier}-LambdaSharp-LoggingStreamArn"
                    }
                  }
                }
              ]
            },
            "PolicyName": {
              "Fn::Sub": "${Tier}-TestModule-Permissions-Policy-For-CWL"
            }
          }
        ]
      }
    },
    "ModuleRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Sid": "LambdaInvocation",
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Sid": "LambdaLoggingWrite",
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "arn:aws:logs:*:*:*"
                },
                {
                  "Sid": "SampleParameterCollectionThirdNestedParameter",
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": "arn:aws:sns:us-east-1:123456789012:SampleTopic"
                },
                {
                  "Sid": "SampleParameterCollectionFourthNestedParameter",
                  "Effect": "Allow",
                  "Action": [
                    "sns:Subscribe"
                  ],
                  "Resource": {
                    "Ref": "SampleParameterCollectionFourthNestedParameter"
                  }
                },
                {
                  "Sid": "SingleResourceParameter",
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": "arn:aws:sns:*:*:*"
                },
                {
                  "Sid": "MultiResourceParameterIndex1",
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": "arn:aws:sns:*:*:*"
                },
                {
                  "Sid": "MultiResourceParameterIndex2",
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": "arn:aws:sns:*:*:*:*"
                },
                {
                  "Sid": "SourceResourceParameter",
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": {
                    "Ref": "SourceResourceParameter"
                  }
                },
                {
                  "Sid": "SourceParameterCollectionSecondSourceResourceParameter",
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": {
                    "Ref": "SourceParameterCollectionSecondSourceResourceParameter"
                  }
                },
                {
                  "Sid": "LambdaDeadLetterQueueLogging",
                  "Effect": "Allow",
                  "Action": [
                    "sqs:SendMessage"
                  ],
                  "Resource": {
                    "Fn::ImportValue": {
                      "Fn::Sub": "${Tier}-LambdaSharp-DeadLetterQueueArn"
                    }
                  }
                }
              ]
            },
            "PolicyName": {
              "Fn::Sub": "${Tier}-TestModule-policy"
            }
          }
        ]
      }
    },
    "Function": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "DeploymentBucketName"
          },
          "S3Key": {
            "Fn::Sub": "${DeploymentKeyPrefix}TestModule/TestModule.Function-NOCOMPILE.zip"
          }
        },
        "DeadLetterConfig": {
          "TargetArn": {
            "Fn::ImportValue": {
              "Fn::Sub": "${Tier}-LambdaSharp-DeadLetterQueueArn"
            }
          }
        },
        "Description": "My function (v1.0)",
        "Environment": {
          "Variables": {
            "STR_VALUE": "This is a literal value",
            "STR_EXPRESSION": "This is a literal value",
            "STR_RESOURCE": {
              "Ref": "SourceResourceParameter"
            },
            "STR_VALUELIST": "first,second,third",
            "STR_EXPRESSIONLIST": {
              "Fn::Join": [
                ",",
                [
                  "This is a literal value",
                  "This is a literal value",
                  {
                    "Ref": "SourceResourceParameter"
                  },
                  "literal value"
                ]
              ]
            },
            "STR_NESTEDVALUE": "A nested literal source value",
            "STR_NESTEDRESOURCE": {
              "Ref": "SourceParameterCollectionSecondSourceResourceParameter"
            },
            "TIER": {
              "Ref": "Tier"
            },
            "MODULE": "TestModule",
            "DEADLETTERQUEUE": {
              "Fn::ImportValue": {
                "Fn::Sub": "${Tier}-LambdaSharp-DeadLetterQueueUrl"
              }
            },
            "LAMBDARUNTIME": "dotnetcore2.1",
            "STR_SAMPLEPARAMETERCOLLECTION": "",
            "STR_SAMPLEPARAMETERCOLLECTION_FIRSTNESTEDPARAMETER": "A literal value",
            "STR_SAMPLEPARAMETERCOLLECTION_SECONDNESTEDPARAMETER": "one,two,three",
            "STR_SAMPLEPARAMETERCOLLECTION_THIRDNESTEDPARAMETER": "arn:aws:sns:us-east-1:123456789012:SampleTopic",
            "STR_SAMPLEPARAMETERCOLLECTION_FOURTHNESTEDPARAMETER": {
              "Ref": "SampleParameterCollectionFourthNestedParameter"
            },
            "SEC_SAMPLEPARAMETERCOLLECTION_FIFTHNESTEDPARAMETER": "AQICAHjeGw7GlEczkZKnuQaQHVYq...+CXNRhA/rkOSNUThq4ikMnVU2g==",
            "SEC_SAMPLEPARAMETERCOLLECTION_SIXTHNESTEDPARAMETER": "AQICAHjeGw7GlEczkZKnuQaQHVYq...+CXNRhA/rkOSNUThq4ikMnVU2g==|Purpose=Security|Spe%7Ccial=Char%7Cacter",
            "STR_SAMPLEPARAMETERCOLLECTION_SEVENTHPARAMETER": "arn:aws:sns:*:*:*",
            "STR_OTHERPARAMETERCOLLECTION": "This collection has a value",
            "STR_OTHERPARAMETERCOLLECTION_FIRSTNESTEDPARAMETER": "Another literal value",
            "STR_SINGLERESOURCEPARAMETER": "arn:aws:sns:*:*:*",
            "STR_MULTIRESOURCEPARAMETER": "arn:aws:sns:*:*:*,arn:aws:sns:*:*:*:*",
            "STR_MULTIRESOURCEPARAMETER_INDEX1": "arn:aws:sns:*:*:*",
            "STR_MULTIRESOURCEPARAMETER_INDEX2": "arn:aws:sns:*:*:*:*",
            "STR_SOURCEVALUEPARAMETER": "This is a literal value",
            "STR_SOURCEEXPRESSIONPARAMETER": "This is a literal value",
            "STR_SOURCERESOURCEPARAMETER": {
              "Ref": "SourceResourceParameter"
            },
            "STR_SOURCEVALUELISTPARAMETER": "first,second,third",
            "STR_SOURCEEXPRESSIONLISTPARAMETER": {
              "Fn::Join": [
                ",",
                [
                  "This is a literal value",
                  "This is a literal value",
                  {
                    "Ref": "SourceResourceParameter"
                  },
                  "literal value"
                ]
              ]
            },
            "STR_SOURCEPARAMETERCOLLECTION": "",
            "STR_SOURCEPARAMETERCOLLECTION_FIRSTSOURCEVALUEPARAMETER": "A nested literal source value",
            "STR_SOURCEPARAMETERCOLLECTION_SECONDSOURCERESOURCEPARAMETER": {
              "Ref": "SourceParameterCollectionSecondSourceResourceParameter"
            },
            "STR_SOURCESUBEXPRESSIONS": {
              "Fn::Join": [
                ",",
                [
                  {
                    "Fn::Sub": [
                      "This is a literal value",
                      {}
                    ]
                  },
                  {
                    "Fn::Sub": [
                      "This is a literal value",
                      {}
                    ]
                  },
                  {
                    "Fn::Sub": [
                      "${Arg00}",
                      {
                        "Arg00": {
                          "Ref": "SourceResourceParameter"
                        }
                      }
                    ]
                  },
                  {
                    "Fn::Sub": [
                      "first,second,third",
                      {}
                    ]
                  },
                  {
                    "Fn::Sub": [
                      "${Arg00}",
                      {
                        "Arg00": {
                          "Fn::Join": [
                            ",",
                            [
                              "This is a literal value",
                              "This is a literal value",
                              {
                                "Ref": "SourceResourceParameter"
                              },
                              "literal value"
                            ]
                          ]
                        }
                      }
                    ]
                  },
                  {
                    "Fn::Sub": [
                      "A nested literal source value",
                      {}
                    ]
                  },
                  {
                    "Fn::Sub": [
                      "${Arg00}",
                      {
                        "Arg00": {
                          "Ref": "SourceParameterCollectionSecondSourceResourceParameter"
                        }
                      }
                    ]
                  },
                  {
                    "Fn::Sub": [
                      "${Arg00}",
                      {
                        "Arg00": {
                          "Fn::GetAtt": [
                            {
                              "Ref": "SourceParameterCollectionSecondSourceResourceParameter"
                            },
                            "TopicName"
                          ]
                        }
                      }
                    ]
                  }
                ]
              ]
            },
            "STR_VERSION": "1.0"
          }
        },
        "Handler": "TestModule.Function::MindTouch.LambdaSharpTestModule.Function.Function::FunctionHandlerAsync",
        "MemorySize": "128",
        "Role": {
          "Fn::GetAtt": [
            "ModuleRole",
            "Arn"
          ]
        },
        "Runtime": "dotnetcore2.1",
        "Tags": [
          {
            "Key": "lambdasharp:tier",
            "Value": {
              "Ref": "Tier"
            }
          },
          {
            "Key": "lambdasharp:module",
            "Value": "TestModule"
          }
        ],
        "Timeout": "30"
      }
    },
    "FunctionLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": {
          "Fn::Sub": "/aws/lambda/${Function}"
        },
        "RetentionInDays": 7
      }
    },
    "FunctionLogGroupSubscription": {
      "Type": "AWS::Logs::SubscriptionFilter",
      "Properties": {
        "DestinationArn": {
          "Fn::ImportValue": {
            "Fn::Sub": "${Tier}-LambdaSharp-LoggingStreamArn"
          }
        },
        "FilterPattern": "-\"*** \"",
        "LogGroupName": {
          "Ref": "FunctionLogGroup"
        },
        "RoleArn": {
          "Fn::GetAtt": [
            "CloudWatchLogsRole",
            "Arn"
          ]
        }
      }
    }
  }
}