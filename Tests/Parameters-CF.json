{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "LambdaSharp CloudFormation Test (v1.0)",
  "Parameters": {
    "DeploymentBucketName": {
      "Type": "String",
      "Description": "LambdaSharp Deployment S3 Bucket Name"
    },
    "DeploymentBucketPath": {
      "Type": "String",
      "Description": "LambdaSharp Deployment S3 Bucket Path"
    },
    "ModuleId": {
      "Type": "String",
      "Description": "LambdaSharp Module Id"
    },
    "Tier": {
      "Type": "String",
      "Description": "LambdaSharp Deployment Tier"
    },
    "TierLowercase": {
      "Type": "String",
      "Description": "LambdaSharp Deployment Tier (lowercase)"
    }
  },
  "Resources": {
    "SourceResourceParameter": {
      "Type": "AWS::SNS::Topic",
      "Properties": {}
    },
    "SampleParameterCollectionFourthNestedParameter": {
      "Type": "AWS::SNS::Topic",
      "Properties": {}
    },
    "CloudWatchLogsRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "CloudWatchLogsKinesisInvocation",
              "Effect": "Allow",
              "Principal": {
                "Service": {
                  "Fn::Sub": "logs.${AWS::Region}.amazonaws.com"
                }
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "CloudWatchLogsKinesisPermissions",
                  "Effect": "Allow",
                  "Action": "kinesis:PutRecord",
                  "Resource": {
                    "Fn::ImportValue": {
                      "Fn::Sub": "${Tier}:LambdaSharp-LambdaSharp::LoggingStreamArn"
                    }
                  }
                }
              ]
            },
            "PolicyName": {
              "Fn::Sub": "${Tier}-${ModuleId}-Permissions-Policy-For-CWL"
            }
          }
        ]
      }
    },
    "ModuleRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "LambdaInvocation",
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "LambdaLogStreamAccess",
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "arn:aws:logs:*:*:*"
                },
                {
                  "Sid": "SourceResourceParameter",
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": {
                    "Ref": "SourceResourceParameter"
                  }
                },
                {
                  "Sid": "SampleParameterCollectionThirdNestedParameter",
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": "arn:aws:sns:us-east-1:123456789012:SampleTopic"
                },
                {
                  "Sid": "SampleParameterCollectionFourthNestedParameter",
                  "Effect": "Allow",
                  "Action": [
                    "sns:Subscribe"
                  ],
                  "Resource": {
                    "Ref": "SampleParameterCollectionFourthNestedParameter"
                  }
                },
                {
                  "Sid": "SingleResourceParameter",
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": "arn:aws:sns:*:*:*"
                },
                {
                  "Sid": "MultiResourceParameter",
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": [
                    "arn:aws:sns:*:*:*",
                    "arn:aws:sns:*:*:*:*"
                  ]
                },
                {
                  "Sid": "LambdaDeadLetterQueueLogging",
                  "Effect": "Allow",
                  "Action": [
                    "sqs:SendMessage"
                  ],
                  "Resource": {
                    "Fn::ImportValue": {
                      "Fn::Sub": "${Tier}:LambdaSharp-LambdaSharp::DeadLetterQueueArn"
                    }
                  }
                }
              ]
            },
            "PolicyName": {
              "Fn::Sub": "${Tier}-${ModuleId}-policy"
            }
          }
        ]
      }
    },
    "Function": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "DeploymentBucketName"
          },
          "S3Key": {
            "Fn::Sub": "${DeploymentBucketPath}TestModule/TestModule.Function-NOCOMPILE.zip"
          }
        },
        "DeadLetterConfig": {
          "TargetArn": {
            "Fn::ImportValue": {
              "Fn::Sub": "${Tier}:LambdaSharp-LambdaSharp::DeadLetterQueueArn"
            }
          }
        },
        "Description": "My function (v1.0)",
        "Environment": {
          "Variables": {
            "TIER": {
              "Ref": "Tier"
            },
            "MODULE_NAME": "TestModule",
            "MODULE_ID": {
              "Ref": "ModuleId"
            },
            "MODULE_VERSION": "1.0",
            "DEADLETTERQUEUE": {
              "Fn::ImportValue": {
                "Fn::Sub": "${Tier}:LambdaSharp-LambdaSharp::DeadLetterQueueArn"
              }
            },
            "LAMBDARUNTIME": "dotnetcore2.1",
            "STR_SAMPLEPARAMETERCOLLECTION": "",
            "STR_SAMPLEPARAMETERCOLLECTION_FIRSTNESTEDPARAMETER": "A literal value",
            "STR_SAMPLEPARAMETERCOLLECTION_SECONDNESTEDPARAMETER": "one,two,three",
            "STR_SAMPLEPARAMETERCOLLECTION_THIRDNESTEDPARAMETER": "arn:aws:sns:us-east-1:123456789012:SampleTopic",
            "STR_SAMPLEPARAMETERCOLLECTION_FOURTHNESTEDPARAMETER": {
              "Ref": "SampleParameterCollectionFourthNestedParameter"
            },
            "SEC_SAMPLEPARAMETERCOLLECTION_FIFTHNESTEDPARAMETER": "AQICAHjeGw7GlEczkZKnuQaQHVYq...+CXNRhA/rkOSNUThq4ikMnVU2g==",
            "SEC_SAMPLEPARAMETERCOLLECTION_SIXTHNESTEDPARAMETER": "AQICAHjeGw7GlEczkZKnuQaQHVYq...+CXNRhA/rkOSNUThq4ikMnVU2g==|Purpose=Security|Spe%7Ccial=Char%7Cacter",
            "STR_SAMPLEPARAMETERCOLLECTION_SEVENTHPARAMETER": "arn:aws:sns:*:*:*",
            "STR_OTHERPARAMETERCOLLECTION": "This collection has a value",
            "STR_OTHERPARAMETERCOLLECTION_FIRSTNESTEDPARAMETER": "Another literal value",
            "STR_SINGLERESOURCEPARAMETER": "arn:aws:sns:*:*:*",
            "STR_MULTIRESOURCEPARAMETER": "arn:aws:sns:*:*:*,arn:aws:sns:*:*:*:*",
            "STR_SOURCESUBEXPRESSIONS": {
              "Fn::Join": [
                ",",
                [
                  "This is a literal value",
                  "This is a literal value",
                  {
                    "Fn::Sub": [
                      "${P0}",
                      {
                        "P0": {
                          "Ref": "SourceResourceParameter"
                        }
                      }
                    ]
                  },
                  "first,second,third",
                  {
                    "Fn::Sub": [
                      "${P0}",
                      {
                        "P0": {
                          "Fn::Join": [
                            ",",
                            [
                              "This is a literal value",
                              "This is a literal value",
                              {
                                "Ref": "SourceResourceParameter"
                              },
                              "literal value"
                            ]
                          ]
                        }
                      }
                    ]
                  },
                  "A nested literal source value",
                  {
                    "Fn::Sub": [
                      "${P0}",
                      {
                        "P0": {
                          "Ref": "SourceParameterCollectionSecondSourceResourceParameter"
                        }
                      }
                    ]
                  },
                  {
                    "Fn::Sub": [
                      "${P0}",
                      {
                        "P0": {
                          "Fn::GetAtt": [
                            "SourceParameterCollectionSecondSourceResourceParameter",
                            "TopicName"
                          ]
                        }
                      }
                    ]
                  }
                ]
              ]
            },
            "STR_MYMODULENAME": "TestModule",
            "STR_MYMODULEID": {
              "Ref": "ModuleId"
            },
            "STR_MYMODULEVERSION": "1.0"
          }
        },
        "Handler": "TestModule.Function::MindTouch.LambdaSharpTestModule.Function.Function::FunctionHandlerAsync",
        "MemorySize": "128",
        "Role": {
          "Fn::GetAtt": [
            "ModuleRole",
            "Arn"
          ]
        },
        "Runtime": "dotnetcore2.1",
        "Timeout": "30"
      }
    },
    "FunctionLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": {
          "Fn::Sub": "/aws/lambda/${Function}"
        },
        "RetentionInDays": 7
      }
    },
    "FunctionLogGroupSubscription": {
      "Type": "AWS::Logs::SubscriptionFilter",
      "Properties": {
        "DestinationArn": {
          "Fn::ImportValue": {
            "Fn::Sub": "${Tier}:LambdaSharp-LambdaSharp::LoggingStreamArn"
          }
        },
        "FilterPattern": "-\"*** \"",
        "LogGroupName": {
          "Ref": "FunctionLogGroup"
        },
        "RoleArn": {
          "Fn::GetAtt": [
            "CloudWatchLogsRole",
            "Arn"
          ]
        }
      }
    }
  }
}