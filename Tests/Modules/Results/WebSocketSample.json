            }
          ]
        },
        "FilterPattern": "-\"*** \"",
        "LogGroupName": {
          "Ref": "ConnectionFunctionLogGroup"
        },
        "RoleArn": {
          "Fn::If": [
            "UseCoreServices",
            {
              "Fn::If": [
                "LambdaSharpCoreLoggingStreamRoleIsImported",
                {
                  "Fn::ImportValue": {
                    "Fn::Sub": [
