    "ModuleRestApiDeployment9F01E7337835B8E68F494C84894209F7": {
      "Type": "AWS::ApiGateway::Deployment",
      "Properties": {
        "Description": {
          "Fn::Sub": "${AWS::StackName} API [9F01E7337835B8E68F494C84894209F7]"
        },
        "RestApiId": {
