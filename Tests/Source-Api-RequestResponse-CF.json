        },
        "Policies": [
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Sid": "LambdaRestApiLogging",
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:DescribeLogGroups",
                    "logs:DescribeLogStreams",
                    "logs:PutLogEvents",
                    "logs:GetLogEvents",
                    "logs:FilterLogEvents"
                  ],
                  "Resource": "*"
                }
              ]
            },
            "PolicyName": "TestModuleRestApiRolePolicy"
          }
        ]
      }
    },
