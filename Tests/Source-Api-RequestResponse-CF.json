        },
        "FunctionName": "test-Test-Function",
        "Handler": "Test.Function::MindTouch.LambdaSharpTest.Function.Function::FunctionHandlerAsync",
        "MemorySize": "128",
        "Role": {
          "Fn::GetAtt": [
            "AppRole",
            "Arn"
          ]
        },
        "Runtime": "dotnetcore2.1",
        "Tags": [
          {
            "Key": "lambdasharp:deployment",
            "Value": "test"
          },
          {
            "Key": "lambdasharp:app",
            "Value": "Test"
          }
        ],
        "Timeout": "30"
      }
